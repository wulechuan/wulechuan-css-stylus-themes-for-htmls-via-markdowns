{__wrappingSelectorOf_markdownArticleLayoutRoot} {
    
    blockquote {
        box-sizing: border-box;
        max-width: calc(100% - 4em);
        display: inline-block; // so that it has an auto width
        vertical-align: top;
        border-style: solid;
        padding: 1px 1.5em 1px 1.3em;
        margin: 0 1em 1.5em 3em;
    }

    details {
        margin:  0.5em 1em 1.5em;
        padding: 0.5em 1em;
    }

    li > details {
        margin-left: 0;
        margin-right: 0;
    }

    summary {
        cursor: pointer;
        padding: 0.25em  0.5em;
        margin:  0.25em -0.25em;
    }

    pre + details {
        margin-top: -0.5em;
    }
}
