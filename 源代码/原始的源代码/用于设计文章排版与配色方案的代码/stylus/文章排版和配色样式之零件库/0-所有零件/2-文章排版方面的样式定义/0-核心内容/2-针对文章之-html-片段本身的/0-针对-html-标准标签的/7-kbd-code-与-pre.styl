{__wrappingSelectorOf_markdownArticleLayoutRoot} {

    kbd, code, pre {
        font-weight: 350;
        text-indent: 0;
    }

    kbd, code {
        display: inline-block;
        vertical-align: baseline;
        line-height: 1.25;
        padding-left 0.25em;
        padding-right 0.25em;
        // letter-spacing: 0;
        min-height: 1em;
        min-width: 0.5em;
        font-style: normal;
        border-style: solid;
    }

    kbd {
        margin: -0.15em 0.2em;
        padding: 0.15em 0.3em;

        position relative;
        top: -0.15em;
    }

    code { // inline code phrases
        font-size: inherit;
        word-break: break-all;
        white-space: pre-wrap;
        margin: 0.1em;
        padding: 0.15em 0.2em;
        cursor: text;

        // position relative;
        // top: -0.05em;
    }

    {languageSelectors('zh', 'hans', 'CN')} {

        code {
            padding-left: 0.25em
        }
    }

    strong code,
    em code {
        font-style: inherit;
        font-weight: inherit;
    }

    a,
    s {

        code {
            color: inherit;
            text-decoration-line: inherit;
            text-decoration-style: inherit;
            text-decoration-color: inherit;
            text-decoration-thickness: inherit;
            // margin-left: 0;
            // margin-right: 0;
        }
    }

    a {

        code {
            cursor: pointer;
        }
    }

    kbd {
        font-size: 80%;
        letter-spacing: 0;
    }

    pre {
        display: block;
        box-sizing: border-box;
        padding: 0 5em 0 0;
        margin: 0.5em 2em 2em;
        max-height: 75vh;
        overflow: auto;

        // 此处的 white-space nowrap 用以配合内层 code 的 display inline-block ， 最终实现代码块右侧的额外留白。
        white-space: nowrap;



        &,
        // > code *, // Why? For Typora? I forgot.
        > code {
            letter-spacing: 0;
            white-space: pre;
            word-wrap: normal;
            word-break: keep-all;
            text-align: left !important;
            position: static;
            top: auto;
            cursor: auto;

            // If content entities (e.g. comments), have
            // a semi-transparent background-color,
            // then value of 1.5 works fine with the "PT Mono" font face.
            // **BUT** still not perfect!
            // line-height: 1.5;

            // If content entities (e.g. comments), have
            // a semi-transparent background-color,
            // then value of 1.65 works fine with the "Consolas" font face.
            // **BUT** still not perfect!
            // line-height: 1.65;

            // Now I decide that nothing have a semi-transparent
            // background-color.
            line-height: 1.6;
        }

        > code {
            display: inline-block;
            box-sizing: border-box;
            border: none !important;
            border-radius: 0;
        }
    }

    &,
    {languageSelectors('zh', 'hans', 'CN')} {

        pre {

            > code {
                padding: 0.5em 1em;
                margin: 0 !important;
            }
        }
    }



    td,
    li {

        > pre {
            margin-left: 0;
            margin-right: 0;
        }
    }

    td {

        > pre {
            margin-right: 0;
            padding-right: 0;
            // width: 100%;

            // > code {
            //     min-width: 20em;
            // }
        }
    }

    li {

        > pre:first-child {
            margin-top: 0; // maybe 0.25em is better?

            // The 2 lines below are for better alignments
            // of list-style dots, when a <pre> is a child of a <li>.
            display: inline-block;
            vertical-align: top;
            width: 100%;
        }
    }

    blockquote,
    td {

        > pre:first-child {
            margin-top: 1.5em;
        }

        > pre:last-child {
            margin-bottom: 1em;
        }

        > pre:first-child:last-child {
            margin-top:    0.5em;
            margin-bottom: 0.5em;
        }
    }

    details {

        > pre {
            // margin-left:  0.5em;
            // margin-right: 0.5em;
            margin-left:  0;
            margin-right: 0;
        }

        > pre:last-child {
            margin-bottom: 0.5em;
        }
    }



    // p + pre {
    //     margin-top: 0;
    // }
}
