{__wrappingSelectorOf_markdownArticleLayoutRoot} {

    kbd, code, pre {
        font-weight: 350;
        text-indent: 0;
    }

    kbd, code {
        display: inline-block;
        vertical-align: baseline;
        line-height: 1.25;
        padding-left 0.25em;
        padding-right 0.25em;
        // letter-spacing: 0;
        min-height: 1em;
        min-width: 0.5em;
        font-style: normal;
        border-style: solid;
    }

    kbd {
        margin: -0.15em 0.2em;
        padding: 0.15em 0.3em;

        position relative;
        top: -0.15em;
    }

    code { // inline code phrases
        font-size: inherit;
        word-break: break-all;
        white-space: pre-wrap;
        margin: 0.1em;
        padding: 0.15em 0.2em;
        position relative;
        top: -0.05em;
        cursor: text;
    }

    {languageSelectors('zh', 'hans', 'CN')} {

        code {
            padding-left: 0.4em
        }
    }

    strong code,
    em code {
        font-style: inherit;
        font-weight: inherit;
    }

    a,
    s {

        code {
            color: inherit;
            text-decoration-line: inherit;
            text-decoration-style: inherit;
            text-decoration-color: inherit;
            text-decoration-thickness: inherit;
            // margin-left: 0;
            // margin-right: 0;
        }
    }

    a {

        code {
            cursor: pointer;
        }
    }

    kbd {
        font-size: 80%;
        letter-spacing: 0;
    }

    pre {

        &,
        // > code *, // Why? For Typora? I forgot.
        > code { // source code blocks
            letter-spacing: 0;
            white-space: pre;
            word-wrap: normal;
            word-break: keep-all;
            text-align: left !important;
            position: static;
            top: auto;
            cursor: auto;
        }

        > code { // source code blocks
            box-sizing: border-box;
            display: block;
            width: 100%;
            line-height: inherit;
            padding: 0.25em 0.5em;
            border: none !important;
            margin: 0 !important;
            border-radius: 0;
            overflow-x: auto;
        }
    }



    pre {
        // If content entities (e.g. comments), have
        // a semi-transparent background-color,
        // then value of 1.5 works fine with the "PT Mono" font face.
        // **BUT** still not perfect!
        // line-height: 1.5;

        // If content entities (e.g. comments), have
        // a semi-transparent background-color,
        // then value of 1.65 works fine with the "Consolas" font face.
        // **BUT** still not perfect!
        // line-height: 1.65;

        // Now I decide that nothing have a semi-transparent
        // background-color.
        line-height: 1.6;


        display: block;
        box-sizing: border-box;
        padding: 0.5em;
        margin: 0.5em 2em 2em;
    }



    td,
    li {

        > pre {
            margin-left: 0;
            margin-right: 0;
        }
    }

    td {

        > pre {
            margin-right: 0;
        }
    }

    li {

        > pre:first-child {
            margin-top: 0; // maybe 0.25em is better?

            // The 2 lines below are for better alignments
            // of list-style dots, when a <pre> is a child of a <li>.
            display: inline-block;
            vertical-align: top;
            width: 100%;
        }
    }

    blockquote,
    td {

        > pre:first-child {
            margin-top: 1.5em;
        }

        > pre:last-child {
            margin-bottom: 1em;
        }

        > pre:first-child:last-child {
            margin-top:    0.5em;
            margin-bottom: 0.5em;
        }
    }

    details {

        > pre {
            // margin-left:  0.5em;
            // margin-right: 0.5em;
            margin-left:  0;
            margin-right: 0;
        }

        > pre:last-child {
            margin-bottom: 0.5em;
        }
    }



    // p + pre {
    //     margin-top: 0;
    // }
}
