{__wrappingSelectorOf_markdownArticleLayoutRoot} {

    .author,
    .document-author,
    .article-author {
        text-indent: 0;
        text-align: center;
    }

    .text-centered,
    .centered {
        text-indent: 0;
        text-align: center;
    }

    .align-rightwards,
    .text-align-rightwards,
    .texts-align-rightwards {
        text-indent: 0;
        text-align: right;
    }

    {languageSelectors('zh', 'hans', 'CN')} {

        .author,
        .document-author,
        .article-author {
            text-indent: 0;
        }

        .text-centered,
        .centered {
            text-indent: 0;
        }

        .align-rightwards,
        .text-align-rightwards,
        .texts-align-rightwards {
            text-indent: 0;
        }
    }



    .hidden-spacebar-between-head-linkage-and-head-text {
        display: inline-block;
        width: 1px;
        height: 1px;
        margin-right: -1px;
        overflow: hidden;
    }

    /* markdown-it plugin: markdown-it-anchor */
    {_selectorOf_article_headingsPermantLinkAnchors},
    a{_selectorOf_article_headingsPermantLinkAnchors} {
        margin-top: -0.1667em;
        margin-bottom: 0em;
        margin-left:  -1.65em;
        margin-right: 0.15em;
        box-sizing: border-box;
        padding: 0.25em 0;
        min-width: 1.5em;
        text-align: center;
        font-weight: normal;
        border-radius: 0.25em;
        display: inline-block;
        vertical-align: middle;
        line-height: 1;
        letter-spacing: 0;
        text-decoration-line: none;
    }

    blockquote, th, td {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {

            {_selectorOf_article_headingsPermantLinkAnchors} {
                display: none;
            }
        }
    }
}
