{__wrappingSelectorOf_markdownArticleLayoutRoot} {

    h1, h2, h3, h4, h5, h6, dt, p {
        text-align: justify
        margin-left: -0.5em;
        margin-right: -0.5em;
        padding-left: 0.5em;
        padding-right: 0.5em;
    }

    h1 {
        font-size: 2.3em;
        line-height: 1.33;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:     2em;
        margin-bottom:  1em;
    }

    h2 {
        font-size: 1.8em;
        line-height: 1.33;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    3em;
        margin-bottom: 1em;
    }

    h3 {
        font-size: 1.4em;
        line-height: 1.5;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    2.5em;
        margin-bottom: 1em;
    }

    h4 {
        font-size: 1.2em;
        line-height: 1.5;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    2em;
        margin-bottom: 1em;
    }

    h5 {
        font-size: 1.1em;
        line-height: 1.5;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    1.5em;
        margin-bottom: 0.75em;
    }

    h6, dt {
        font-size: 1em;
        line-height: 1.5;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    1.5em;
        margin-bottom: 0.75em;
    }

    h1, h2, h3, h4, h5, h6, dt {
        padding-top:    0.25em;
        padding-bottom: 0.25em;

        border-width: 0;
    }

    {languageSelectors('zh', 'hans', 'CN')} {
        h1, h2 {
            letter-spacing: 0.2em;
        }
    }





    h5 + h6,
    h4 + h5,
    h3 + h4,
    h2 + h3 {
        margin-top: 0.5em;
    }

    h1 + h2 {
        // Nothing
    }

    // hr + h6,
    // hr + h5,
    // hr + h4,
    // hr + h3,
    // hr + h2,
    // hr + h1 {
    //     margin-top: 1em;
    // }



    blockquote, th, td, {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {
            margin-top: 0.75em;
            margin-bottom: 0.25em;
            padding-top: 0.25em;
            padding-bottom: 0.25em;
        }

        > h4,
        > h3,
        > h2,
        > h1 {

            ~ p:last-child {
                margin-bottom 1.25em
            }
        }
    }

    blockquote {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {

            &:first-child {
                // margin-top: 0.25em;
            }
        }
    }

    th, td {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {

            &:first-child {
                // margin-top: 0.25em;
            }
        }
    }



    p {
        padding-top:    0.25em;
        padding-bottom: 0.25em;

        line-height: 1.8;

        margin-top:    1em;
        margin-bottom: 1em;
    }

    blockquote {

        > p {
            margin-top:    0.5em;
            margin-bottom: 0.5em;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        + p {
            margin-top:    0.5em;
        }
    }

    center,
    center > * {
        text-align: center;
    }



    {languageSelectors('zh', 'hans', 'CN')} {

        p {
            text-indent: 2.4em;
        }

        li {

            > p:only-of-type
            > p:first-child {
                text-indent: 0;
            }
        }

        blockquote {

            > p:only-of-type {
                text-indent: 0;
            }
        }

        center {

            p {
                text-indent: 0;
            }
        }
    }
}
