{__wrappingSelectorOf_markdownArticleLayoutRoot} {

    s {
        text-decoration-line: line-through;
        text-decoration-style: solid;
    }

    h1, h2, h3, h4, h5, h6, dt {
        border-width: 0;
        cursor: text;
        text-indent: 0;
    }

    h1, h2 {
        margin-left: 0;
        margin-right: 0;
        padding-left: 0.75em;
        padding-right: 0.75em;
        text-align: center;

        p,
        small {
            font-size: 0.667em;
            display: flex;
            flex-direction: row;
            justify-content: center;
            text-align: justify;
            line-height: 1.33;
            margin-top: 0.5em;
        }

        small p,
        p small {
            font-size: 100%;
        }
    }

    {languageSelectors('zh', 'hans', 'CN')} {

        h1, h2 {
            letter-spacing: 0.1em;

            small,
            p {
                text-indent: -2.7em;
                margin-left: 3.7em;
            }
        }
    }

    h3, h4, h5, h6 {
        text-align: justify;
        margin-left: -0.75em;
        margin-right: -0.75em;
        padding-left: 0.75em;
        padding-right: 0.75em;
    }



    h1 {
        font-size: 2.75em;
        line-height: 1.333;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:     3em;
        margin-bottom:  1em;
    }

    h2 {
        font-size: 2.2em;
        line-height: 1.333;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    4em;
        margin-bottom: 1em;
    }

    h3 {
        font-size: 1.75em;
        line-height: 1.333;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    3.5em;
        margin-bottom: 1em;
    }

    h4 {
        font-size: 1.33em;
        line-height: 1.333;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    3em;
        margin-bottom: 1em;
    }

    h5 {
        font-size: 1.2em;
        line-height: 1.333;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    3em;
        margin-bottom: 0.75em;
    }

    h6, dt {
        font-size: 1.1em;
        line-height: 1.333;

        padding-top:    0.5em;
        padding-bottom: 0.5em;

        margin-top:    1.5em;
        margin-bottom: 0.75em;
    }

    dt {
        text-align: justify;
        margin-left: -0.5em;
        margin-right: -0.5em;
        padding-left: 0.5em;
        padding-right: 0.5em;
    }





    h5 + h6,
    h4 + h5,
    h3 + h4,
    h2 + h3 {
        margin-top: -1em;
    }

    h1 + h2 {
        // Nothing
    }

    // hr + h6,
    // hr + h5,
    // hr + h4,
    // hr + h3,
    // hr + h2,
    // hr + h1 {
    //     margin-top: 1em;
    // }



    blockquote, th, td, {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {
            margin-top: 0.75em;
            margin-bottom: 0.25em;
            padding-top: 0.25em;
            padding-bottom: 0.25em;
        }

        > h4,
        > h3,
        > h2,
        > h1 {

            ~ p:last-child {
                margin-bottom 1.25em
            }
        }
    }

    &,
    {languageSelectors('zh', 'hans', 'CN')} {

        blockquote {

            > h6,
            > h5,
            > h4,
            > h3,
            > h2,
            > h1 {
                margin-left: -0.75em;
                margin-right: -0.75em;
                padding-left: 0.75em;
                padding-right: 0.75em;
            }
        }
    }

    th, td {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {

            &:first-child {
                // margin-top: 0.25em;
            }
        }
    }



    p {
        cursor: text;
        text-align: justify;
        // line-height: 1.8;

        padding-top:    0.25em;
        padding-bottom: 0.25em;
        padding-left:   0.5em;
        padding-right:  0.5em;

        margin-left:   1em;
        margin-right:  1em;
        margin-top:    1em;
        margin-bottom: 1em;
    }

    blockquote {

        > p {
            margin-left:   0.5em;
            margin-right:  0.5em;
            margin-top:    0.5em;
            margin-bottom: 0.5em;
            
            &:first-child {
                margin-top: 1em;
            }

            &:last-child {
                margin-bottom: 0.75em;
            }

            &:only-of-type {
                text-indent: 0;
                margin-top: 0.25em;
                margin-bottom: 0.25em;
                margin-left: 0;
                margin-right: 0;
            }
        }
    }

    li > p {
        margin-left:  -0.5em;
        margin-right: -0.5em;
    }

    h1, h2, h3, h4, h5, h6 {

        + p {
            margin-top: 0em;
        }
    }

    center,
    center > * {
        text-align: center;
    }



    {languageSelectors('zh', 'hans', 'CN')} {

        p {
            text-indent: 2.2em;
        }

        li {

            > p:only-of-type
            > p:first-child {
                text-indent: 0;
            }
        }

        blockquote {

            > p:only-of-type {
                text-indent: 0;
            }
        }

        center {

            p {
                text-indent: 0;
            }
        }
    }
}
