    @media (max-width: 600px) {

        h1, h2, h3 {
            padding-left: 1em;
        }

        h4, h5, h6 {
            padding-left: 0.8em;
        }
        
        h1 {
            font-size: 2.25em;
        }

        h2 {
            font-size: 1.9em;
        }

        h3 {
            font-size: 1.6em;
        }

        h4 {
            font-size: 1.3em;
        }

        h5 {
            font-size: 1.2em;
        }

        h6, dt {
            font-size: 1.1em;
        }

        ul, ol {
            padding-left: 1.8em;
            padding-right: 0;
        }

        p {
            margin-left: 0;
            margin-right: 0;
        }

        blockquote {
            margin-left:  0;
            margin-right: 0;
            padding-left: 1em;
            padding-right: 1em;
            max-width: 100%;
        }

        details {
            margin-left:  0;
            margin-right: 0;
        }

        table {
            max-width: none;
            width: 100%;
        }

        td {
            max-width: 400px;
        }

        pre {
            margin-left:  0;
            margin-right: 0;
        }

        /* blockquote, */ table {

            pre > code {
                white-space: normal !important;
                word-break: break-all;
            }
        }

        hr {
            margin: 1.5em auto 2em 0;
        }

        video {
            width: 100%;
        }
    }
}
