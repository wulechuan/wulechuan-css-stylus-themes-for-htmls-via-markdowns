@import '../../theming-variables'



/* 以下 CSS 是除代码块之外的页面整体着色方案。*/

{_selectorOf_article_root} {
    color: #000;
    background-color: #f7f7f9;
    box-shadow: 0 0 0.4em rgba(0, 0, 0, 0.2);
}





{__wrappingSelectorOf_markdownArticleBaseThemingRules} {

    a {
        transition-property: visibility, opacity, color, background-color, border, border-radius, transform;
        transition-duration: 0.3s;

        &:visited,
        & {
            color: #015eff;
        }

        &:hover,
        &:focus,
        &:active {
            color: red;
        }
    }

    a[href^="#"] {
        // So-called page local links.
        // They point to the page they are in.

        &:visited,
        & {
            color: #1b1;
        }

        // &:hover,
        // &:focus,
        // &:active {
        //     color: #1b1;
        // }
    }

    a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {
        // Permanent links created by
        // markdown-it plugin: markdown-it-anchor

        &:visited,
        & {
            color: #e8e8e8;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        &:hover > a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {
            color: #aaa;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        > a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {
                
            &:hover,
            &:focus,
            &:active {
                color: #1b1;
            }
        }

        &:target:hover,
        &:target {

            > a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {
                color: #1b1;
            }
        }
    }



    h1, h2 {
        color: #111;
    }
    
    h3, h4 {
        color: #222;
    }

    h5, h6,
    dt {
        color: #000;
    }




    img {
        color: #555;
        background-color: rgba(black, 0.051);
        box-shadow: inset 0 0 0.5em rgba(black, 0.19);
    }




    input[type="checkbox"] + label {
        color: black;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    input[type="checkbox"]:checked + label {
        color: #696;
        text-shadow: -1px -1px 0 rgba(0, 128, 0, 0.1);
    }




    strong,
    b,
    em {
        color: black;
    }



    blockquote {
        color: #000;
        border-color: #f90;
        background-color: rgba(black, 0.051);
        // text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.15);
    }


    details {
        background-color: rgba(128, 128, 128, 0.079);
        box-shadow: inset 0 0 0.25em rgba(0, 0, 0, 0.079);
    }

    summary:focus,
    summary:active {
        color: #1b1;
    }


    table {
        border-color: #111;
        background-color: white;
    }

    thead tr,
    th {
        border-color: #222;
    }

    td {
        border-color: #d9d9d9;
    }

    thead {
        color: #eee;
        background-color: #444;
    }

    tbody {
        tr:nth-child(odd) {
            background-color: transparent;
        }

        tr:nth-child(even) {
            background-color: rgba(black, 0.045);
        }
    }


    code,
    kbd {
        text-shadow: none !important;
    }

    code {
        color: #b19;
        border-color: rgba(black, 0.219);
        background-color: white;
    }

    pre code {
        background-color: transparent !important;
    }

    kbd {
        // color: #fff;
        // background-color: #789abc;
        // border-color: #fff;
        // box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.219);

        color black;
        background-color: #fff;
        background-image: linear-gradient(45deg, white, #eee);
        border-color: #bbb #ddd #ddd #bbb;
        box-shadow: 0em 0.15em 0 0.05em #bbb;
    }



    hr {
        color: rgba(128, 128, 128, 0.45);
        background-image: linear-gradient(to right, transparent, currentColor 150%);
    }

    hr::before {
        box-shadow: inset 1px 1px 2px 0 rgba(0, 0, 0, 0.51);
    }
}
