@import '../../theming-variables'



/* 以下 CSS 是除代码块之外的页面整体着色方案。*/

{_selectorOf_article_root} {
    color: #888;
    background-color: #1e1e1e;
    box-shadow: 0 0 0.2em rgba(0, 0, 0, 0.79);
}



{__wrappingSelectorOf_markdownArticleBaseThemingRules} {

    a {
        transition-property: visibility, opacity, color, background-color, border, border-radius, transform;
        transition-duration: 0.3s;

        &:visited,
        & {
            color: #79f;
        }

        &:hover,
        &:focus,
        &:active {
            color: #9bf;
        }
    }

    a[href^="#"] {

        &:visited,
        & {
            color: #6c5;
        }

        &:hover,
        &:focus,
        &:active {
            color: #9e8;
        }
    }

    a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {
        // Permanent links created by
        // markdown-it plugin: markdown-it-anchor

        &:visited,
        & {
            color: #333;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        &:hover > a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {
            color: #6c5;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        > a{_selectorOf_article_headingsPermantLinkAnchors}[href^="#"] {

            &:hover,
            &:focus,
            &:active {
                color: #9e8;
            }
        }
    }



    // h1, h2 {
    //     color: #b6b6b6;
    // }

    // h3, h4 {
    //     color: #aaa;
    // }

    // h5, h6,
    // dt {
    //     color: #ddd;
    // }



    s {
        color: #944;
        text-decoration-color: #f44;
        text-decoration-style: solid;
        text-decoration-thickness: 3px;
    }



    img {
        color: #555;
        background-color: rgba(black, 0.219);
        box-shadow: inset 0 0 0.5em rgba(black, 0.51);
    }



    input[type="checkbox"] + label {
        color: #ddd;
        // text-shadow: 1px 1px 2px rgba(black, 0.2);
    }

    input[type="checkbox"]:checked + label {
        color: #aba;
        text-shadow: -1px -1px 0 rgba(0, 128, 0, 0.1);
    }



    b,
    i {
        color: #bbb;
    }

    strong {
        color: #ec9;
        background-color: #423824;
    }

    em {
        color: #9bd;
        background-color: #193851;
    }

    strong em,
    em strong {
        color: #fbb;
        background-color #511919;
    }



    blockquote {
        color: #b6b6b6;
        border-color: #794513;
        background-color: rgba(white, 0.051);
        // text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.79);
    }



    details {
        background-color: rgba(0, 0, 0, 0.079);
        box-shadow: inset 0 0 0.25em rgba(0, 0, 0, 0.319);
    }

    summary:focus,
    summary:active {
        color: #7d5;
    }



    table {
        color: #b6b6b6;
        border-color: #555;
        background-color: #2b2b2b;
    }

    thead tr {
        border-color: #515151;
    }

    th {
        border-color: #3a3a3a;
    }

    td {
        border-color: #222;
    }

    thead {
        color: #000;
        background-color: #454545;
    }

    tbody {
        tr:nth-child(odd) {
            background-color: transparent;
        }

        tr:nth-child(even) {
            background-color: rgba(white, 0.0319);
        }
    }



    code,
    kbd {
        text-shadow: none !important;
    }

    code {
        color: #d8b;
        border-color: rgba(white, 0.219);
        background-color: #050505;
    }

    a > code {
        color: inherit;
    }

    pre code {
        background-color: transparent !important;
    }

    kbd {
        // color: #fff;
        // background-color: #789abc;
        // border-color: #fff;
        // box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.219);

        color #ddd;
        background-color: #151515;
        background-image: linear-gradient(45deg, black, #151515);
        border-color: #191919 #131313 #131313 #191919;
        box-shadow: 0em 0.15em 0 0.05em #000;
    }



    hr {
        color: rgba(128, 128, 128, 0.45);
        background-image: linear-gradient(to right, transparent, currentColor 150%);
    }

    hr::before {
        box-shadow: inset 1px 1px 2px 0 rgba(0, 0, 0, 0.51);
    }
}
