@import '../../../_global-variables-mixinx-and-functions'
@import '../../theming-variables'



{_selectorOf_article_backdropBackgroundColorCarrier} {
    MIXIN_DefineFireFoxScrollBar(#333);
    background-color: #bbb;
}

{_selectorOf_article_rootParent} {
    MIXIN_DefineWebkitScrollBar($BaseColor: black, $SizeScale: 1.5);
}

if (_selectorOf_article_backdropBackgroundColorCarrier == 'html' && _selectorOf_article_root != 'body') {
    body {
        background-color: transparent;
    }
}
